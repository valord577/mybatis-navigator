# see https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

indent_size = 4
indent_style = space

trim_trailing_whitespace = true

[*.{md, markdown}]
trim_trailing_whitespace = false

[*.{html, css}]
indent_size = 2

[*.sh]
indent_size = 2

[*.bat]
end_of_line = crlf
indent_size = 2
